{
  "px-to-rem.px-per-rem": 10,
  "path-intellisense.mappings": {
    "/images": "${workspaceFolder}/public/images",
    "../images": "${workspaceFolder}/public/images",
    "../fonts": "${workspaceFolder}/public/fonts"
  },
  "path-intellisense.extensionOnImport": true,
  "path-intellisense.showHiddenFiles": false,
  "cssvar.files": ["**/*.css", "**/*.scss"],
  "cssvar.ignore": ["**/node_modules/**", "**/dist/**", "**/build/**"],
  "cssPeek.peekToExclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**"
  ]
}
